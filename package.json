{
  "name": "foretagsinfo-mcp",
  "version": "1.0.0",
  "description": "MCP server för svensk företagsinformation via Bolagsverkets API",
  "type": "module",
  "main": "build/index.js",
  "bin": {
    "foretagsinfo-mcp": "build/index.js"
  },
  "scripts": {
    "build": "tsc",
    "postinstall": "npm run build",
    "dev": "tsx src/index.ts",
    "dev:http": "tsx src/http-server.ts",
    "start": "node build/index.js",
    "start:http": "node build/http-server.js",
    "test": "vitest",
    "typecheck": "tsc --noEmit"
  },
  "keywords": [
    "mcp",
    "model-context-protocol",
    "bolagsverket",
    "företagsdata",
    "swedish-companies",
    "sweden",
    "annual-reports"
  ],
  "author": "Isak Skogstad",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/isakskogstad/foretagsinfo-mcp"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.0.4",
    "axios": "^1.7.0",
    "cheerio": "^1.1.2",
    "dotenv": "^16.4.7",
    "fast-xml-parser": "^4.3.0",
    "jszip": "^3.10.1",
    "pino": "^9.5.0",
    "pino-pretty": "^13.0.0",
    "zod": "^3.24.1"
  },
  "devDependencies": {
    "@types/node": "^22.10.2",
    "tsx": "^4.21.0",
    "typescript": "^5.7.2",
    "vitest": "^2.1.8"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
